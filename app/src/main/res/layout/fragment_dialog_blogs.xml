<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="addSchoolViewModel"
            type="com.eaapps.schoolsguide.features.profile.addSchool.AddSchoolViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/cancelBtn"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_15sdp"
             android:background="@drawable/background_clear_circle"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@id/newsLabel"
            android:src="@drawable/round_expand_more_black_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/newsLabel"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_32sdp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_n"
            app:layout_constraintBottom_toBottomOf="@id/newsLabel"
            app:layout_constraintEnd_toStartOf="@id/newsLabel"
            app:layout_constraintTop_toTopOf="@id/newsLabel"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/lineNews"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/gray_0"
            app:layout_constraintTop_toBottomOf="@id/newsLabel"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/newsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/product_sans_bold"
            android:text="@string/news"
            android:textColor="@color/textColor1"
            android:textSize="@dimen/_24ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcNews"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/lineNews" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>