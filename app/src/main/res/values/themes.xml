<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SchoolsGuide" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="FormLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>


    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextActivate</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextActivate</item>
    </style>


    <style name="BottomNavigationTextActivate">
        <item name="fontFamily">@font/rpt_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.School" parent="">
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.Card.School.Vertical" parent="">
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.Card.Slider" parent="">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.Card.Profile" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>

        <!--        <item name="cornerFamily">rounded</item>-->
        <!--        <item name="cornerSize">50%</item>-->
    </style>


    <style name="RateBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/rate_active</item>
        <item name="colorControlActivated">@color/rate_un_active</item>
    </style>

    <style name="RateBar.Filter" parent="android:style/Widget.Material.RatingBar.Indicator">
        <item name="colorControlNormal">@color/rate_active</item>
        <item name="colorControlActivated">@color/black</item>
    </style>


    <style name="helperTextAppearance" parent="">
        <item name="fontFamily">@font/rpt_bold</item>
    </style>

    <style name="AlertDialogStyle" parent="MaterialAlertDialog.MaterialComponents">
        <item name="fontFamily">@font/rpt_bold</item>
        <item name="android:textColorAlertDialogListItem">@color/textColor1</item>
        <item name="colorSecondary">@color/colorApp3</item>
        <item name="colorSurface">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="android:textColorSecondary">@color/textColor1</item>
        <item name="android:textColorPrimary">@color/textColor1</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">45dp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorApp1Dark</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorApp3</item>
    </style>


    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="behavior_draggable">false</item>


    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>